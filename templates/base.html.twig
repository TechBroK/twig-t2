<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{% block title %}TicketApp{% endblock %}</title>
    <link rel="stylesheet" href="/public/css/main.css">
  </head>
  <body>
    <header class="site-header">
      <div class="site-container header-inner">
        <a class="brand" href="/"> 
          <span class="logo">—</span>
          <span class="brand-text">TicketFlow</span>
        </a>
        <nav class="main-nav">
          <a href="/">Home</a>
          <a href="/dashboard">Dashboard</a>
          <a href="/auth/login">Login</a>
          <a class="signup" href="/auth/signup">Sign up</a>
        </nav>
      </div>
    </header>

    <main class="site-container">
      {% block content %}{% endblock %}
    </main>

    <footer class="site-footer">
      <div class="site-container footer-inner">
        <div class="footer-left">
          <div class="brand">TicketFlow</div>
          <div class="footer-copy">© {{ "now"|date('Y') }} TicketFlow</div>
        </div>
        <nav class="footer-nav">
          <a href="#top">Back to top</a>
          <a href="/privacy">Privacy</a>
          <a href="/terms">Terms</a>
        </nav>
        <div class="footer-social">
          <a href="https://x.com/Adebayo25083860" class="social-link" aria-label="Twitter">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path></svg>
          </a>
